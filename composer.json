{
    "name": "adriandev/ddd-vacation-management",
    "type": "project",
    "require": {
      "php": "^8.3",
      "ext-mysqli": "*",
      "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "VM\\": "src/"
        }
    },
    "authors": [
        {
            "name": "adrian.mol"
        }
    ],
    "autoload-dev": {
      "psr-4": {
        "Tests\\": "tests/"
      }
    },
    "require-dev": {
      "phpstan/phpstan": "^2.1",
      "friendsofphp/php-cs-fixer": "^3.64",
      "squizlabs/php_codesniffer": "^3.10",
      "symfony/var-dumper": "^7.3",
        "phpunit/phpunit": "^12.3"
    },
    "scripts": {
      "cs-fix": "php-cs-fixer fix --config=php-cs-fixer.php --allow-risky=yes",
      "cs-check": "php-cs-fixer fix --config=php-cs-fixer.php --dry-run --diff --allow-risky=yes",
      "test": "XDEBUG_MODE=coverage phpunit --coverage-html coverage/html --coverage-xml=coverage/xml",
      "coverage-check": [
        "@test",
        "coverage-checker coverage/xml 80"
      ]
    }
}
